@model Contract

<body>
    <form method="post" asp-action="Delete">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Delete Contract</h2>
                <hr />
            </div>
            <div class="mb-3">
                <label asp-for="DateContract"></label>
                <input asp-for="DateContract" disabled class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="DateEnd"></label>
                <input asp-for="DateEnd" disabled class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="CarId"></label>
                <input asp-for="CarId" disabled class="form-control" />
                <span asp-validation-for="CarId" disabled class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ContractDays"></label>
                <input asp-for="ContractDays" disabled class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Price"></label>
                <input asp-for="Price" disabled class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
            <a asp-controller="Contract" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>
        </div>
    </form>
</body>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
