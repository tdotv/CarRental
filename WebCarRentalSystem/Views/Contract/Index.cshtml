@model IEnumerable<Contract>

@{
    ViewData["Title"] = "Contract";
}

<body>
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Contract List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-asp-controller="Contract" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Create New Contract
                </a>
            </div>
        </div>
    </div>

    <table class=" table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["DateContractSortParm"]">@Html.DisplayNameFor(model => model.DateContract)</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["DateEndSortParm"]">@Html.DisplayNameFor(model => model.DateEnd)</a>
                </th>
                <th>
                    Car Registration Number
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["ContractDaysSortParm"]">@Html.DisplayNameFor(model => model.ContractDays)</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSortParm"]">@Html.DisplayNameFor(model => model.Price)</a>
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="20%">
                        @obj.DateContract
                    </td>
                    <td width="20%">
                        @obj.DateEnd
                    </td>
                    <td width="20%">
                        @obj.Car.CarRegNumber
                    </td>
                    <td width="20%">
                        @obj.ContractDays
                    </td>
                    <td width="20%">
                        @obj.Price
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Contract" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Contract" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
