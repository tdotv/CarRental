@using WebCarRentalSystem.ViewModels
@model CreateContractViewModel

<body>
    <form method="post" asp-action="Create">
        <input type="hidden" id="ApplicationUserId" name="ApplicationUserId" asp-for="ApplicationUserId" />
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Create Contract</h2>
                <hr />
            </div>
            <div class="mb-3">
                <label asp-for="DateContract"></label>
                <input asp-for="DateContract" class="form-control" disabled placeholder="Date Contract" />
                <span asp-validation-for="DateContract" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DateEnd"></label>
                <input asp-for="DateEnd" class="form-control" placeholder="Date End" />
                <span asp-validation-for="DateEnd" class="text-danger"></span>
            </div>
