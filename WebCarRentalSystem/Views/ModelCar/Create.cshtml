@using WebCarRentalSystem.ViewModels
@model CreateModelCarViewModel

<body>
    <form method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Create Model</h2>
                <hr />
            </div>
            <div class="mb-3">
                <label asp-for="Class"></label>
                <select asp-for="Class" class="form-select" id="exampleSelect2">
                    <option value="" disabled selected>Choose Class</option>
                    <option>Econom</option>
                    <option>Middle</option>
                    <option>Business</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Marka"></label>
                <input asp-for="Marka" class="form-control" />
                <span asp-validation-for="Marka" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ManufactureYear"></label>
                <input asp-for="ManufactureYear" class="form-control" />
                <span asp-validation-for="ManufactureYear" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FuelConsumption"></label>
                <input asp-for="FuelConsumption" class="form-control" />
                <span asp-validation-for="FuelConsumption" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Transmission"></label>
                <input asp-for="Transmission" class="form-control" />
                <span asp-validation-for="Transmission" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="EngineValue"></label>
                <input asp-for="EngineValue" class="form-control" />
                <span asp-validation-for="EngineValue" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Image"></label>
                <input asp-for="Image" type="file" class="form-control">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
            <a asp-controller="ModelCar" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>
        </div>
    </form>
</body>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
