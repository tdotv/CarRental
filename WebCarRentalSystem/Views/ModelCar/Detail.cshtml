@model ModelCar

<body>
    <!-- Page Content -->
    <div class="container">

        <!-- Portfolio Item Heading -->
        <h1 class="my-4">
            @Model.Marka @Model.Model
        </h1>

        <!-- Portfolio Item Row -->
        <div class="row">

            <div class="col-md-8">
                <img class="img-fluid" src="@Model.Image" alt="">
            </div>

            <div class="col-md-4">
                <h3 class="my-3">Model Description</h3>
                <p>@Model.Description</p>
                <h3 class="my-3">Model Details</h3>
                <ul>
                    <li>Engine: @Model.EngineValue</li>
                    <li>Fuel Efficiency: @Model.FuelConsumption</li>
                    <li>Transmission: @Model.Transmission</li>
                    <li>Manufacture Year: @Model.ManufactureYear</li>
                </ul>
                <a asp-controller="ModelCar" asp-action="Index" class="btn btn-secondary" style="width:150px">
                    Back to List
                </a>
                @if (Model.Car.Rented == false)
                {
                    <a asp-controller="Contract" asp-action="Create" class="btn btn-secondary" asp-route-id="@Model.Id" style="width:150px">
                        Rent a Car
                    </a>
                }

            </div>

        </div>

    </div>
    <!-- /.container -->
</body>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}