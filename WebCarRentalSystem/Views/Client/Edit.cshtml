@model Client

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Client</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Passport"></label>
            <input asp-for="Passport" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DYears"></label>
            <input asp-for="DYears" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Rating"></label>
            <input asp-for="Rating" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="HomeAddress"></label>
            <input asp-for="HomeAddress" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Telephone"></label>
            <input asp-for="Telephone" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Client" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
