@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

@model WebCarRentalSystem.ViewModels.DashboardViewModel

<body>
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h1 class="text-primary">User Dashboard</h1>
            </div>
        </div>
    </div>
    <a type="button" class="btn btn-primary" asp-area="" asp-controller="Accident" asp-action="Create">Create Accident</a>
    <a type="button" class="btn btn-primary" asp-area="" asp-controller="Contract" asp-action="Create">Create Contract</a>
    <a type="button" class="btn btn-primary" asp-area="" asp-controller="Dashboard" asp-action="EditUserProfile">Edit User Profile</a>
    <div class="album py-5 bg-light">
        <div class="container">

            <h4 class="display-4 fw-normal">Your Accidents</h4>
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

                @foreach (var item in Model.Accidents)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top" src="" width="225" height="225" alt="Card image cap">
                            <div class="card-body">
                                <p class="card-text">Dtp Date = @item.DateDtp</p>
                                <p class="card-text">Collisions = @item.Collisions</p>
                                <p class="card-text">Result = @item.Result</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a type="btn btn-success" asp-controller="Accident" asp-action="Detail" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-secondary">View</a>
                                        @if (SignInManager.IsSignedIn(User))
                                        {
                                            <a asp-controller="Accident" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                            <a asp-controller="Accident" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                        }
                                    </div>
                                    <small class="text-muted">@item.ContractId</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <h4 class="display-4 fw-normal">Your Contracts</h4>
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                @foreach (var item in Model.Contracts)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top" src="" width="225" height="225" alt="Card image cap">
                            <div class="card-body">
                                <p class="card-text">Date Contract: @item.DateContract</p>
                                <p class="card-text">Date End: @item.DateEnd</p>
                                <p class="card-text">Contract Days: @item.ContractDays</p>
                                <p class="card-text">Price: @item.Price</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a type="btn btn-success" asp-controller="Contract" asp-action="Detail" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-secondary">View</a>
                                        @if (SignInManager.IsSignedIn(User))
                                        {
                                            <a asp-controller="Contract" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                            <a asp-controller="Contract" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                        }
                                    </div>
                                        <small class="text-muted"></small>                                    
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
