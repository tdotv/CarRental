@model IEnumerable<Accident>

<body>
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Accident List</h2>
            </div>
        </div>
    </div>

    <form asp-action="Index" method="get">
        <div class="container p-3">
            <div class="row pt-0">
                <div class="col-6">
                    Find by Collision: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                    <input type="submit" value="Search" class="btn btn-default" /> |
                    <a asp-action="Index">Back to Full List</a>
                </div>
                <div class="col-6 text-end">
                    <a asp-asp-controller="Accident" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> &nbsp; Create New Accident
                    </a>
                </div>
            </div>
        </div>
    </form>

    <table class=" table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Contract Date
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["DateDtpSortParm"]">@Html.DisplayNameFor(model => model.DateDtp)</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["CollisionsSortParm"]">@Html.DisplayNameFor(model => model.Collisions)</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["ResultSortParm"]">@Html.DisplayNameFor(model => model.Result)</a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="25%">
                        @obj.Contract.DateContract
                    </td>
                    <td width="25%">
                        @obj.DateDtp
                    </td>
                    <td width="25%">
                        @obj.Collisions
                    </td>
                    <td width="25%">
                        @obj.Result
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Accident" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Accident" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>