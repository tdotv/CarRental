@model IEnumerable<Accident>

@{
    ViewData["Title"] = "Accident";
}

<body>
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Accident List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-asp-controller="Accident" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Create New Accident
                </a>
            </div>
        </div>
    </div>

    <table class=" table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Contract
                </th>
                <th>
                    Dtp Date
                </th>
                <th>
                    Collisions
                </th>
                <th>
                    Result
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="25%">
                        @obj.ContractId
                    </td>
                    <td width="25%">
                        @obj.DateDtp
                    </td>
                    <td width="25%">
                        @obj.Collisions
                    </td>
                    <td width="25%">
                        @obj.Result
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Accident" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Accident" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
