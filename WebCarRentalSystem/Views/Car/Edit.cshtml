@model Car

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Car</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="ModelCarId"></label>
            <input asp-for="ModelCarId" class="form-control" />
            <span asp-validation-for="ModelCarId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Color"></label>
            <input asp-for="Color" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Rented"></label>
            <input asp-for="Rented" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="CarRegNumber"></label>
            <input asp-for="CarRegNumber" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Car" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
