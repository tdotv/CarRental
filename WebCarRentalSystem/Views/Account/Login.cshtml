@using WebCarRentalSystem.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<head>
    <style>
        body {
            background-color: #f2f2f2;
        }
    </style>
</head>

<!-- Section: Design Block -->
<body>
    <!-- Text -->
    <div class="text-center" style="margin-top:100px">
        <p>
            <h1><strong>Login</strong></h1>
        </p>    
    </div>
    <!-- Form -->
    <div class="card d-flex bg-light" style="margin-top:25px">
        @*width:1250px; height:458px*@
        <div class="row g-0 d-flex">
            <!-- Image -->
            <div class="col-lg-4 d-none d-lg-flex">
                <img src="https://i.postimg.cc/MHcTjcfg/logo-final.png" alt="Car To Moon"
                     class="w-100 rounded-t-5 rounded-tr-lg-0 rounded-bl-lg-5" /> 
            </div>
            <!-- Card -->
            <div class="col-lg-8">
                <div class="card-body py-5 px-md-5 ">

                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="Input Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" placeholder="Input Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- 2 column grid layout for inline styling -->
                        <div class="row mb-4">
                            <div class="col d-flex justify-content-center">
                                <!-- Checkbox -->
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                                    <label class="form-check-label" for="form2Example31"> Remember me </label>
                                </div>
                            </div>

                            <div class="col">
                                <!-- Simple link -->
                                <a href="#!">Forgot password?</a>
                            </div>
                        </div>

                        <!-- Submit button -->
                        <div class="form-group">
                            <input class="btn btn-outline-success float right" type="submit" value="Log in" />
                            <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
