@using WebCarRentalSystem.ViewModels
@model CreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
}

<form method="post" asp-action="CreateRole">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Role</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="RoleName"></label>
            <input asp-for="RoleName" class="form-control" placeholder="Name"/>
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create Role</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to Home
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
